<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.dao.BoardMapper">

	<!-- 게시글 전체 가져오기 -->

	<select id="selectAllCount" resultType="int">
		select count(*) from board 
	</select>
	
	<select id="selectSearchAllCount" resultType="int">
		select count(*) from board
		<if test="category == 'btitle' or category == 'bcontent' "> 
			where ${category} like '%'||#{searchValue}||'%'
		</if>		
		
		<if test="category == 'all'"> 
			where btitle like '%'||#{searchValue}||'%' or bcontent like '%'||#{searchValue}||'%'
		</if>		
		 
	</select>

	<select id="selectAll" resultType="com.java.dto.BoardDto">
		<!-- select * from board order by bgroup desc, bstep asc -->
		
		select * from (select row_number() over (order by bgroup desc, bstep asc) rnum, a.* from board a) where rnum between #{startRow} and #{endRow} 
	</select>
	
	<select id="selectSearch" resultType="com.java.dto.BoardDto">
	
		select * from board
		
		<!-- 
		<if test="category == 'btitle'"> 
		where btitle like '%'||#{searchValue}||'%'
		</if>
		<if test="category == 'bcontent'"> 
		where bcontent like '%'||#{searchValue}||'%'
		</if>
		 -->
		
		<if test="category == 'btitle' or category == 'bcontent' "> 
		where ${category} like '%'||#{searchValue}||'%'
		</if>		
		
		<if test="category == 'all'"> 
		where btitle like '%'||#{searchValue}||'%' or bcontent like '%'||#{searchValue}||'%'
		</if>
		
		order by bgroup desc, bstep asc 
	</select>	
	
	<select id="selectOne" resultType="com.java.dto.BoardDto">
		select * from board where bno = #{bno}
	</select>
	


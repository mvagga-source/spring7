		<![CDATA[
			select * from (select * from board where bno < #{bno} order by bgroup desc) where rownum = 1	
		]]>
	</select>
	
	
	<select id="selectOnePrev" resultType="board" parameterType="board">
		select * from board
		where bno =
		(
			select prev_no from(
			select bno, lead(bno,1,-1) over(order by bgroup desc, bstep asc) prev_no from board
			)where bno = #{bno}
		);
	  </select>
	
	  <select id="selectOneNext" resultType="board" parameterType="board">
		select * from board
		where bno =
		(
			select next_no from(
			select bno, lag(bno,1,-1) over(order by bgroup desc, bstep asc) next_no from board
			)where bno = #{bno}
		);
	  </select>	
	 -->
	 
	<update id="updateBoard">
		update board set btitle=#{btitle},bcontent=#{bcontent},bfile=#{bfile},bdate=sysdate where bno=#{bno}
	</update>
	
	<insert id="insertBoard">
		insert into board values (board_seq.nextval,#{btitle},#{bcontent},#{id},board_seq.currval,0,0,0,#{bfile},sysdate)
	</insert>
	
	<!-- 
		< or > 사용시
			
	<![CDATA[
	
	]]>
	
	 -->
	<update id="updateReply">
		update board set bstep = bstep+1 where bgroup = #{bgroup} and bstep>#{bstep}
	</update>
	
	<insert id="insertReply">
		insert into board values (board_seq.nextval,#{btitle},#{bcontent},#{id},#{bgroup},#{bstep}+1,#{bindent}+1,0,'',sysdate)
	</insert>	
	
	<!-- 
	<insert id="insertReply">
		insert into board values (board_seq.nextval,#{btitle},#{bcontent},#{id},#{bgroup},(select max(bstep)+1 from board where group=#{bgroup}),#{bindent}+1,0,'',sysdate)
	</insert>
	 -->		
	
	<delete id="deleteBoard">
		delete from board where bno = #{bno}
	</delete>
	
</mapper>